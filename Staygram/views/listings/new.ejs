<% layout("/layouts/boilerplate") -%>
  <div class="row">
    <div class="col-8 offset-2">
    
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>

        <div class="valid-feedback">title looks good</div>

      </div>

      <div class="mb-3">
        <label for="discription" class="form-lable">Description</label>
        <textarea
        name="listing[description]"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">please enterd discription</div>

      </div>


      <div class="mb-3">

        <label for="image" class="form-lable">Upload Image</label>
        <input
        name="listing[image]"
        type="file"
        class="form-control"
      />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">price</label>
          <input name="listing[price]" placeholder="enter price"  class="form-control" required />

          <div class="invalid-feedback">Please enterd a valid price</div>
  
        </div>
      
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">country</label>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control"required/>
          <div class="invalid-feedback">Please enterd a country name</div>
        </div>

      </div>
      
    
    
      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
      />

      <div class="invalid-feedback">please enterd location</div>

      </div>
      <br /><br />
      <button class="btn btn-dark">Add</button>
    </form>

  </div>

</div>
